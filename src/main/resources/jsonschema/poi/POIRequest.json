{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"type": {
			"type": "string"
		},
		"categories": {
			"type": "string"
		},
		"customer": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"id": {
					"type": "string"
				}
			},
			"required": [
				"id"
			]
		},
		"site": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"state": {
					"type": "string"
				},
				"city": {
					"type": "string"
				},
				"street": {
					"type": "string"
				},
				"houseNumber": {
					"type": "string"
				},
				"zip": {
					"type": "string"
				},
				"latitude": {
					"type": "string"
				},
				"longitude": {
					"type": "string"
				}
			}
		},
		"contact": {
			"type": "object",
			"properties": {
				"phones": {
					"type": "array",
					"items": [
						{
							"type": "string"
						},
						{
							"type": "string"
						}
					]
				},
				"email": {
					"type": "string"
				},
				"fax": {
					"type": "string"
				}
			}
		},
		"attributes": {
			"type": "array",	
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"value": {
						"type": "string"
					}
				},
	          	"required": [
		            "name",
		            "value"
		        ]
			}
		},
		"required": [
			"customer"
		]
	}
}
